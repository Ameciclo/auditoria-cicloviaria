<layouts>
    <!-- Main layout -->
    <layout name="root">
        <row>
            <button type="page" label="Placas" targetlayout="placas"
                icon="avaliacao_cicloviaria_icons/on_way_vertical_sign.png" />
            <button type="page" label="Obstáculos" targetlayout="obstaculos"
                icon="avaliacao_cicloviaria_icons/obstacle.png" />
            <button type="page" label="Riscos" targetlayout="riscos"
                icon="avaliacao_cicloviaria_icons/risk_situation.png" />
        </row>
        <row>
            <button type="page" label="Caracterização" targetlayout="caracterizacao-ciclo"
                icon="avaliacao_cicloviaria_icons/flow_direction.png" />
            <button type="page" label="Segregadores" targetlayout="segregadores"
                icon="avaliacao_cicloviaria_icons/segregator_type.png" />
            <button type="page" label="Avaliações" targetlayout="avaliacoes"
                icon="avaliacao_cicloviaria_icons/sinuosity.png" />
        </row>
        <row>
            <button type="voicerec" icon="logo_voice" />
            <button type="picture" icon="logo_camera" />
            <button type="textnote" icon="logo_textnote" />
        </row>
    </layout>

    <!-- Placas layout -->
    <layout name="placas">
        <row>
            <button type="tag" label="R-34"  icon="avaliacao_cicloviaria_icons/on_way_vertical_sign.png"/>
            <button type="tag" label="A-30"  icon="avaliacao_cicloviaria_icons/cross_vertical_sign.png"/>
            <button type="tag" label="Complementar" />
        </row>
        <row>
            <button type="tag" label="Início" />
            <button type="tag" label="Fim" />
            <button type="tag" label="Semáforo exclusivo" />
        </row>
        <row>
            <button type="tag" label="20km/h" />
            <button type="tag" label="30km/h" icon="avaliacao_cicloviaria_icons/speed_sign_30.png"/>
            <button type="tag" label="40km/h" />
        </row>
        <row>
            <button type="tag" label="50km/h" />
            <button type="tag" label="60km/h" />
            <button type="tag" label="80km/h" />
        </row>
    </layout>

    <!-- Obstáculos layout -->
    <layout name="obstaculos">
        <row>
            <button type="tag" label="Bueiro" />
            <button type="tag" label="Raíz" />
            <button type="tag" label="Buraco" />
        </row>
        <row>
            <button type="tag" label="Vala profunda" />
            <button type="tag" label="Desnível" />
            <button type="tag" label="Outro" />
        </row>
    </layout>

    <!-- Riscos layout -->
    <layout name="riscos">
        <row>
            <button type="tag" label="Paradas de ônibus" />
            <button type="tag" label="Cruzamento perigoso" />
        </row>
        <row>
            <button type="tag" label="Invasão na conversão" />
            <button type="tag" label="Troca de lado" />
        </row>
        <row>
            <button type="tag" label="Invisibilidade à esquerda" />
            <button type="tag" label="Fim em contrafluxo" />
            <button type="tag" label="Outro" />
        </row>
    </layout>

    <!-- Caracterização layout -->
    <layout name="caracterizacao-ciclo">
        <row>
            <button type="tag" label="Ciclovia" />
            <button type="tag" label="Ciclofaixa" />
            <button type="tag" label="Ciclorrota" />
            <button type="tag" label="Calçada compartilhada" />
        </row>
        <row>
            <button type="page" label="Fluxo da ciclo" targetlayout="fluxo-ciclo" />
            <button type="page" label="Localização na Via" targetlayout="localizacao-via" />
        </row>
        <row>
            <button type="page" label="Fluxo da Via" targetlayout="fluxo-via" />
            <button type="page" label="Qtd faixas" targetlayout="faixas-via" />
        </row>
    </layout>

    <!-- Localização da estrutura-->
    <layout name="localizacao-via">
        <row>
            <button type="tag" label="No canteiro central" />
        </row>
        <row>
            <button type="tag" label="Na via, junto ao canteiro" />
        </row>
        <row>
            <button type="tag" label="No bordo direito de Mão Única" />
        </row>
        <row>
            <button type="tag" label="No bordo esquerdo de Mão Única" />
        </row>
        <row>
            <button type="tag" label="Em bordo de Mão Dupla" />
        </row>
        <row>
            <button type="tag" label="Sobre calçada" />
            <button type="tag" label="Isolada" />
        </row>
    </layout>

    <!-- Fluxo da estrutura-->
    <layout name="fluxo-ciclo">
        <row>
            <button type="tag" label="Bidirecional" />
        </row>
        <row>
            <button type="tag" label="Bidirecional com Mão Inglesa na estrutura" />
        </row>
        <row>
            <button type="tag" label="Unidirecional no fluxo" />
        </row>
        <row>
            <button type="tag" label="Unidirecional no contrafluxo" />
        </row>
    </layout>

    <!-- Fluxo da via-->
    <layout name="fluxo-via">
        <row>
            <button type="tag" label="Mão única" />
        </row>
        <row>
            <button type="tag" label="Mão dupla" />
        </row>
        <row>
            <button type="tag" label="Mão inglesa" />
        </row>
    </layout>

    <!-- Faixas de rolamento-->
    <layout name="faixas-via">
        <row>
            <button type="tag" label="1" />
        </row>
        <row>
            <button type="tag" label="2" />
        </row>
        <row>
            <button type="tag" label="3" />
        </row>
        <row>
            <button type="tag" label="4" />
        </row>
        <row>
            <button type="tag" label="5" />
        </row>
        <row>
            <button type="tag" label="6" />
        </row>
        <row>
            <button type="tag" label="7" />
        </row>
        <row>
            <button type="tag" label="8" />
        </row>
        <row>
            <button type="tag" label="9" />
        </row>
    </layout>

    <!-- Segregadores layout -->
    <layout name="segregadores">
        <row>
            <button type="tag" label="Canteiros" />
            <button type="tag" label="Prismas" />
            <button type="tag" label="Guias" />
        </row>
        <row>
            <button type="tag" label="Gelo baiano" />
            <button type="tag" label="Tachões" />
            <button type="tag" label="Balizadores" />
        </row>
        <row>
            <button type="tag" label="Pintura" />
            <button type="tag" label="outros" />
        </row>
    </layout>

    <!-- Página Avaliações -->
    <layout name="avaliacoes">
        <row>
            <button type="page" label="Sinuosidade" targetlayout="sinuosidade" />
            <button type="page" label="Sombreamento" targetlayout="sombreamento" />
        </row>
    </layout>

    <!-- Página Sinuosidade -->
    <layout name="sinuosidade">
        <row>
            <button type="tag" label="O traçado é sinuoso, exigindo atenção" />
        </row>
        <row>
            <button type="tag" label="O traçado é muito sinuoso, podendo causar colisões" />
        </row>
        <row>
            <button type="tag"
                label="O traçado possui curvas com obstáculos que impedem visualização" />
        </row>
        <row>
            <button type="tag" label="O traçado é muito sinuoso com curvas e obstáculos visuais" />
        </row>
    </layout>

    <!-- Página Sombreamento -->
    <layout name="sombreamento">
        <row>
            <button type="tag" label="Sombras em PRATICAMENTE TODA a extensão" />
        </row>
        <row>
            <button type="tag" label="Sombras na MAIOR PARTE da extensão" />
        </row>
        <row>
            <button type="tag" label="Sombras em alguns trechos, COM mudas plantadas" />
        </row>
        <row>
            <button type="tag" label="Sombras em alguns trechos, SEM mudas novas" />
        </row>
        <row>
            <button type="tag" label="Somente mudas novas" />
        </row>
        <row>
            <button type="tag" label="Não há árvores nem mudas" />
        </row>
    </layout>
</layouts>